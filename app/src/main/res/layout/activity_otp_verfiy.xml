<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Otp"
            android:gravity="center"
            android:textSize="40sp"
            app:drawableTopCompat="@drawable/ic_mail" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your OTP that comes on your phone number and tap 'Next' to create account"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp"
            android:hint="Entere Otp Here"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:inputType="phone"
            android:maxLength="6"
            android:maxLines="1"
            android:id="@+id/otpEnter"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Next"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/bContinue2"/>
        <TextView
            android:id="@+id/otpcountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="12sp"
            android:layout_gravity="center"/>



    </LinearLayout>

</RelativeLayout>